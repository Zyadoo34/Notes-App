<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditingNoteActivity">

    <EditText
        android:id="@+id/note_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:hint="Note"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/update_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Update"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintStart_toStartOf="@id/note_et"
        app:layout_constraintTop_toBottomOf="@id/note_et" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="delete"
        app:layout_constraintEnd_toEndOf="@id/note_et"
        app:layout_constraintStart_toEndOf="@id/update_btn"
        app:layout_constraintTop_toTopOf="@id/update_btn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>